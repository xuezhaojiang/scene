set nocompatible
set encoding=utf-8
set fileencodings=utf-8,chinese
set tabstop=4
set expandtab
" set noexpandtab
set backspace=indent,eol,start
autocmd Filetype c set omnifunc=ccomplete#Complete
autocmd Filetype cpp set omnifunc=cppcomplete#Complete
set hlsearch
set incsearch
set number
set display=lastline
set ignorecase
syntax on
set nobackup
set noswapfile
set ruler
set showcmd
set cmdheight=1
set laststatus=2
set autoindent
set smartindent
set formatoptions=tcrqn
set mouse=a
set showmatch
set matchtime=5
